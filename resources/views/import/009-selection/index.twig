{% extends "./layout/default" %}
{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <h1>{{ mainTitle }}</h1>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
                <div class="card">
                    <div class="card-header">
                        {{ subTitle }}
                    </div>
                    <div class="card-body">
                        <p>
                            TODO
                            Select country and bank
                            If you would like some support, <a href="https://docs.firefly-iii.org/other-data-importers/"
                                                               target="_blank">check out the documentation for this
                                page.</a>
                        </p>
                        <p>Select country</p>
                    </div>
                </div>
            </div>
        </div>
        {% if not errors.isEmpty %}
            <div class="row mt-3">
                <div class="col-lg-10 offset-lg-1">
                    <div class="card">
                        <div class="card-header">
                            Errors
                        </div>
                        <div class="card-body">
                            <p class="text-danger">Some error(s) occurred:</p>
                            <ul>
                                {% for error in errors.all %}
                                    <li class="text-danger">{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <form method="post" action="{{ route('009-selection.post') }}" accept-charset="UTF-8" id="store">
            <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
            <div class="row mt-3">
                <div class="col-lg-10 offset-lg-1">
                    <div class="card">
                        <div class="card-header">
                            Select country
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="country" class="col-sm-3 col-form-label">Country</label>
                                <div class="col-sm-9">
                                    <select class="form-control"
                                            name="country"
                                            id="country">
                                        <option label="(no selection)" value="XX">(no selection)</option>
                                        {% for country in response %}
                                            <option label="{{ countries[country.code]|default('Unknown') }}"
                                                    value="{{ country.code }}">{{ countries[country.code]|default('Unknown') }}</option>
                                        {% endfor %}
                                    </select>

                                    <small id="countryHelp" class="form-text text-muted">
                                        Which country is your bank in?
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% for country in response %}
                <div class="row mt-3 bank-box" id="{{ country.code }}-box" style="display: none;">
                    <div class="col-lg-10 offset-lg-1">
                        <div class="card">
                            <div class="card-header">
                                Select bank in TODO COUNTRY
                            </div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="bank_{{ country.code }}" class="col-sm-3 col-form-label">Bank ({{ country.code }})</label>
                                    <div class="col-sm-9">
                                        <select class="form-control bank-selector" name="bank_{{ country.code }}"
                                                id="bank_{{ country.code }}">
                                            <option label="(no bank)" value="XX" data-days="0">(no bank)</option>
                                            {% for bank in country.banks %}
                                                <option label="{{ bank.name }}"
                                                        data-days="{{ bank.transactionTotalDays }}"
                                                        value="{{ bank.id }}">{{ bank.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>

                                <p class="mt-3 text-info bank-selected" style="display: none;">Imports from this bank
                                    go no further back than <strong class="days">XX</strong> days.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="row mt-3 bank-box" id="XX-box" style="display: block;">
                <div class="col-lg-10 offset-lg-1">
                    <div class="card">
                        <div class="card-header">
                            Select a bank
                        </div>
                        <div class="card-body">
                            <small id="noBankHelp" class="form-text text-muted">
                                (Please select a country first)
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3 submit-button" style="display: none;">
                <div class="col-lg-10 offset-lg-1">
                    <div class="card">
                        <div class="card-header">
                            Submit!
                        </div>
                        <div class="card-body">
                            <button type="submit" class="float-end btn btn-primary">Submit &rarr;</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
                <div class="card">
                    <div class="card-body">
                        <div class="btn-group btn-group-sm">
                            <a href="{{ route('back.upload') }}" class="btn btn-secondary"><span class="fas fa-arrow-left"></span> Go back to upload</a>
                            <a href="{{ route('flush') }}" class="btn btn-danger btn-sm"><span class="fas fa-redo-alt"></span> Start over</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--

                        <div class="row">
                            <div class="col-lg-6">
                                <a href="{{ route('back.upload') }}" class="btn btn-secondary">&larr; Go back to
                                    upload</a>
                                <br>
                                <small class="text-muted">Changes on this page will not be saved.</small>
                            </div>
                            <div class="col-lg-6">

                            </div>
                        </div>
                    </form>
                </div>
    -->
{% endblock %}
                {% block scripts %}
                    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#country').change(selectCountry)
                            $('.bank-selector').change(showDayCounter);
                        });

                        function showDayCounter() {
                            $('.bank-selected').show();
                            let val = $('#country').val();
                            $('.days').text(($('#bank_' + val + ' option:selected').data('days')));
                        }

                        function selectCountry() {
                            var val = $('#country').val();
                            $('.bank-box').hide();
                            $('.submit-button').show();
                            $('#' + val + '-box').show();
                        }
                    </script>
                {% endblock %}
